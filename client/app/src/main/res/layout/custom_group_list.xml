<?xml version="1.0" encoding="utf-8"?>
<com.example.daymoon.Layout.CustomSwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF5534"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/trash" />

        <TextView
            android:id="@+id/confirmDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@color/white"
            android:text="Yes,Delete"
            android:textColor="#FF5534" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/groupimage"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/group"
            android:background="@drawable/imagebackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/groupimage"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/groupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="2018 ieee 试点班"/>
                <TextView
                    android:id="@+id/last_event_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="bottom"
                    android:textSize="12dp"
                    android:textColor="@color/textgray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="班会 8：00 - 9：00 东上院"/>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</com.example.daymoon.Layout.CustomSwipeLayout>