<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topbg"
    tools:context=".UserInterface.GroupActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/topbg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/user"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@color/topbg"
                android:src="@mipmap/user_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                android:textColor="@color/red"
                android:text="@string/menu_item_group"/>
            <ImageButton
                android:id="@+id/calendar"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/group"
                android:background="@color/topbg"
                android:src="@mipmap/calendar_red"/>
            <ImageButton
                android:id="@+id/group"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/group_white"
                android:background="@drawable/red_background"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/calendar_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageButton
                        android:id="@+id/search"
                        android:scaleType="fitCenter"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gray_background"
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/search"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="100dp"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:layout_height="30dp"
                        android:text="2019/9/5"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/gray_corner_bg"/>
                    <ImageButton
                        android:id="@+id/more"
                        android:scaleType="fitCenter"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gray_background"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/tools_white"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bordergray"/>
            <android.support.v7.widget.RecyclerView
                android:padding="0.5dp"
                android:id="@+id/group_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</android.support.constraint.ConstraintLayout>